<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewCartItem"
        android:layout_width="48dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutCartItemRight"
        app:layout_constraintEnd_toStartOf="@+id/layoutCartItemRight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutCartItemRight"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:srcCompat="@drawable/cake" />

    <LinearLayout
        android:id="@+id/layoutCartItemRight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewCartItem"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutCartItemRightTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCartItemTitle"
                style="@style/Widget.AppCompat.TextView.CartItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:text="On the top"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/textViewCartItemPrice"
                style="@style/Widget.AppCompat.TextView.CartItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$US,1.50"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCartItemRightCaption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CartItemCaption"
                style="@style/Widget.AppCompat.TextView.CartItemCaption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Caption"
                android:textAlignment="viewStart" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.IconButton.CartDeleteButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                app:icon="@drawable/close" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>