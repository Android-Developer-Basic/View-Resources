<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/appBackground"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/img"
        style="@style/CustomImageStyle"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/image"
        android:src="@drawable/blur_darkred"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        style="@style/CustomTextViewStyle"
        android:text="@string/on_the_top"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caption"
        style="@style/CustomCaptionTextStyle"
        android:text="@string/caption"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/price"
        style="@style/CustomTextViewStyle"
        android:text="@string/us_1_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/caption"
        app:layout_constraintBottom_toBottomOf="@id/caption"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/close"
        android:contentDescription="@string/close" />

</androidx.constraintlayout.widget.ConstraintLayout>
