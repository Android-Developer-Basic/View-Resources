<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="312dp"
    android:layout_gravity="center"
    android:background="@color/button_text"
    >

    <TextView
        android:id="@+id/signInTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:text="Sign in"
        android:textSize="20sp"
        android:textColor="@color/subTotalText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/regTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:text="@string/register"
        android:textSize="14sp"
        android:textColor="@color/button_sign_in"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/InputLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="26dp"
        android:hint="E-mail"
        android:textColorHint="@color/subTotalText"
        app:layout_constraintTop_toBottomOf="@id/signInTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="e.g. john@gmail.com"
            android:textColor="@color/subTotalText"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField2"
        style="@style/InputLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:hint="Password"
        android:textColorHint="@color/subTotalText"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* * * * * *"
            android:textColor="@color/subTotalText"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/resetTextView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="Reset my password"
        android:textSize="12sp"
        android:textColor="@color/app_bar_color"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/RegisterButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_sign_in"
        android:text="@string/sign_in"
        android:textColor="@color/button_text"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/resetTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
