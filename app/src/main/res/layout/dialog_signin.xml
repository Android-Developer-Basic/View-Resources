<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="312dp"
    android:background="?attr/colorOnPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="155dp"
        android:layout_height="28dp"
        android:id="@+id/topSignIn"
        android:text="@string/sign_in2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:textColor="?attr/mainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:layout_marginEnd="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"
        android:textColor="?attr/textButtonRegister"
        android:background="@android:color/transparent"
        android:text="@string/register2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/e_mail"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:textColorHint="?attr/mainText"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topSignIn">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/e_g_john_gmail_com"
            android:textColor="?attr/mainText"
            app:boxStrokeColor="#0000FF" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldPass"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:paddingStart="24dp"
        android:paddingTop="0dp"
        android:layout_marginTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="0dp"
        android:textColorHint="?attr/mainText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextField">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:text="@string/e_g_john_gmail_com"
        android:textColor="?attr/mainText"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#0000FF"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_my_password"
        android:textColor="?attr/textReset"
        android:textSize="12sp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintTop_toBottomOf="@id/outlinedTextFieldPass"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="?attr/buttonBottomSignIn"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sign_in"
        app:cornerRadius="4dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>