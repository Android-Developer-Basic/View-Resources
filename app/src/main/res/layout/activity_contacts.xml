<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/id_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/id_contacts_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/id_contacts_mtoolbar"
            style="@style/ToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/contacts"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="@string/contacts_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/id_name"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:hint="@string/contacts_name_hint"
                app:endIconDrawable="@drawable/baseline_person_24"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_edit_name"
                    style="@style/CustomTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/id_ln_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/id_name">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_phone"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:hint="@string/contacts_phone_hint"
                    app:endIconDrawable="@drawable/baseline_phone_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_edit_phone"
                        style="@style/CustomTextInputEditText"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/id_phone_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_weight="2"
                    android:entries="@android:array/phoneTypes"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/underline"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/id_address"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:hint="@string/contacts_address_hint"
                app:endIconDrawable="@drawable/baseline_fmd_good_24"
                app:layout_constraintTop_toBottomOf="@+id/id_ln_phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_edit_address"
                    style="@style/CustomTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/id_city_state_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/id_address">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_city"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:hint="@string/contacts_city_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_edit_city"
                        style="@style/CustomTextInputEditText"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/id_state"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_weight="4"
                    android:entries="@array/States"
                    android:fontFamily="@font/roboto"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/underline"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_zip"
                    style="@style/CustomTextInputLayout"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_weight="3"
                    android:hint="@string/contacts_zip_hint"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/id_edit_zip"
                        style="@style/CustomTextInputEditText"
                        android:inputType="number"
                        android:maxLength="6" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/id_birthday"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:hint="@string/contacts_birthday_hint"
                app:endIconDrawable="@drawable/baseline_calendar_month_24"
                app:layout_constraintTop_toBottomOf="@+id/id_city_state_zip">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_edit_irthday"
                    style="@style/CustomTextInputEditText"
                    android:inputType="date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/id_notes"
                style="@style/CustomTextInputLayout"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/medium_margin"
                android:layout_marginVertical="@dimen/small_margin"
                android:hint="@string/contacts_notes_hint"
                app:endIconDrawable="@drawable/baseline_create_24"
                app:layout_constraintTop_toBottomOf="@+id/id_birthday">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_edit_notes"
                    style="@style/CustomTextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonReg"
                style="@style/CustomRegButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contacts_register_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_notes"
                app:layout_constraintVertical_bias="1.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
