<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OrderDetailsView">
        <attr name="picture" format="reference" />
        <attr name="iconColor" format="reference" />
        <attr name="price" format="string" />
        <attr name="title" format="string" />
    </declare-styleable>

    <style name="ActivityCardStyle" parent="BaseStyle">
        <item name="android:layout_marginVertical">@dimen/gap_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/gap_large</item>
    </style>

    <style name="BaseStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <attr name="AppBarBackground" format="color" />
    <attr name="ActivityCartTotalItemsTextColor" format="color" />
    <attr name="ActivityCartTotalSum" format="color" />
    <attr name="ActivityDialogSignIn" format="color" />
</resources>