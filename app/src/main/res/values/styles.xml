<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="navigationIconTint">?attr/toolbarIconsColor</item>
        <item name="titleTextColor">?attr/toolbarTitleColor</item>
        <item name="colorOnSurfaceVariant">?attr/toolbarTitleColor</item>
    </style>

    <style name="Toolbar.CartToolbar">
        <item name="backgroundTint">?attr/toolbarBackGroundColorDark</item>
    </style>

    <style name="ContactsTextView" parent="">
        <item name="android:textColorHint">#263238</item>
        <item name="boxBackgroundColor">#F0F0F0</item>
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="endIconTint">@color/icon_tint</item>
    </style>

    <style name="ContactsDropDown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconTint">@color/icon_tint</item>
        <item name="android:textColorHint">#263238</item>
        <item name="boxBackgroundColor">#F0F0F0</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CartImages" parent="">
        <item name="android:layout_width">48dp</item>>
        <item name="android:layout_height">48dp</item>>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="CartItemName" parent="">
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>

    </style>

    <style name="CartPrice" parent="">
        <item name="android:layout_width">wrap_content</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#263238</item>

    </style>

    <style name="CartCaption" parent="">
        <item name="android:layout_width">0dp</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#263238</item>
        <item name="android:text">@string/caption</item>
    </style>

    <style name="CartCloseImage" parent="">
        <item name="android:layout_width">15dp</item>>
        <item name="android:layout_height">15dp</item>>
        <item name="android:layout_marginEnd">19.33dp</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>

    <style name="CartTotal" parent="">
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginBottom">184dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CartAddTotal" parent="">
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginBottom">96dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#263238</item>
        <item name="android:textColor">#263238</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>