<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.ViewResources.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/Theme.ViewResources.Button</item>
    </style>

    <style name="Theme.ViewResources.Button">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component, and -->
        <!--the text color is colorOnPrimary -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CartTextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/cart_total_color</item>
    </style>

    <style name="SignInButton" parent="Widget.MaterialComponents.Button">
        <item name="font">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">@dimen/paddingBasic</item>
        <item name="backgroundTint">@color/primary_color</item>
    </style>


    <style name="RegisterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="font">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/paddingBasic</item>
        <item name="backgroundTint">@color/white</item>
    </style>


    <style name="PayButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="font">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:background">@drawable/cart_button</item>
        <item name="backgroundTint">@color/cart_button_color</item>
        <item name="icon">@drawable/ic_wallet</item>
        <item name="iconTint">@color/button_icon_color</item>
    </style>

</resources>