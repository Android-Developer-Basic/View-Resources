<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="mainStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="textInputStyle">@style/layoutsStyle</item>
        <item name="textInputFilledExposedDropdownMenuStyle">@style/spinnersStyle</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
        <item name="textAppearanceSubtitle1">@style/layoutsTextStyle</item>

    </style>

    <style name="toolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_color</item>
        <item name="titleTextAppearance">@style/toolbarTextStyle</item>
        <item name="navigationIconTint">@color/toolbar_text_color</item>
    </style>

    <style name="layoutsStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

        <item name="boxBackgroundColor">@color/activity_contacts_background</item>
        <item name="endIconScaleType">center</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/activity_contacts_icons</item>
    </style>

    <style name="spinnersStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/activity_contacts_background</item>
    </style>
    <style name="registerButton">
        <item name="android:background">@drawable/register_button</item>
        <item name="android:textAppearance">@style/buttonTextStyle</item>
    </style>

    <style name="toolbarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
    </style>

    <style name="layoutsTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="buttonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/registerButtonTextColor</item>
    </style>






</resources>