<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/PrimaryColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/PrimaryColor</item>
        <!-- Customize your theme here. -->
        <item name="PrimaryColor">#2980B9</item>
        <item name="BackgroundColor">#FFFFFF</item>
        <item name="ShadeColor">#F0F0F0</item>
        <item name="SecondaryColor">#2Ecc71</item>
        <item name="IconsColor">#979797</item>
        <item name="MainColor">#FFFFFF</item>
        <item name="TopAppIconColor">#FFFFFF</item>
        <item name="Cart_Secondary_color">#263238</item>
        <item name="CartTV_mainColor">#263238</item>
        <item name="CartTV_Close_btn">#E74C3C</item>
        <item name="Cart_LabelTV">#263238</item>
        <item name="Cart_btn_pay_ic">#979797</item>
        <item name="Dialog_PrimaryColor">#2980B9</item>
        <item name="Dialog_ResetTV">#2980B9</item>
        <item name="Dialog_ShadeColor">#F0F0F0</item>

    </style>

    <style name="textViewCart16sp" parent="Widget.MaterialComponents.TextView">

        <item name="android:textColor">?attr/CartTV_mainColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="maxLines">1</item>
    </style>

    <style name="textViewCart12sp" parent="Widget.MaterialComponents.TextView">

        <item name="android:textColor">?attr/CartTV_mainColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="maxLines">1</item>
    </style>

    <style name="textFont20sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textFont14sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textFont12sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="BtnFont14sp" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>

    </style>

</resources>