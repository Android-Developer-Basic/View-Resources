<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ViewResources" parent="Theme.ThemeSwitcher.Light"/>
    <style name="Theme.ViewResources.Dialogue" parent="Theme.ThemeSwitcher.Dialogue.Light"/>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">?attr/colorActionBar</item>
        <item name="android:textColorPrimary">?attr/colorOnActionBarTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_left</item>
    </style>

    <style name="Theme.ThemeSwitcher.Dialogue.Light"  parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="colorSignInTitle">@color/black</item>
        <item name="colorSignInRegister">@color/light_primary</item>
        <item name="colorSignInReset">@color/light_primary</item>
        <item name="colorSignInButton">@color/light_primary</item>
        <item name="colorOnSignInButton">@color/white</item>
    </style>

    <style name="Theme.ThemeSwitcher.Dialogue.Dark"  parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">@color/chinese_black</item>
        <item name="colorSignInTitle">@color/white</item>
        <item name="colorSignInRegister">@color/light_blue</item>
        <item name="colorSignInReset">@color/light_grey</item>
        <item name="colorSignInButton">@color/light_blue</item>
        <item name="colorOnSignInButton">@color/black</item>
    </style>

       <!-- Light Theme -->
    <style name="Theme.ThemeSwitcher.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnActionBar">@color/white</item>
        <item name="colorActionBar">@color/light_primary</item>
        <item name="colorOnActionBarTitle">@color/white</item>

        <item name="colorActiveButton">@color/light_green</item>
        <item name="colorOnActiveButton">@color/white</item>

        <item name="colorPayButton">@color/gunmetal</item>
        <item name="colorOnPayButton">@color/white</item>
        <item name="colorOnPayButtonIcon">@color/lighter_grey</item>

        <item name="colorOrderCountItems">@color/black</item>
        <item name="colorOrderSum">@color/black</item>

        <item name="colorButtonRemoveItem">@color/red</item>
        <item name="colorOrderInfo">@color/black</item>

        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ThemeSwitcher.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnActionBar">@color/light_grey</item>
        <item name="colorOnActionBarTitle">@color/white</item>
        <item name="colorActionBar">@color/dark_grey</item>

        <item name="colorActiveButton">@color/light_blue</item>
        <item name="colorOnActiveButton">@color/black</item>

        <item name="colorPayButton">@color/kiwi</item>
        <item name="colorOnPayButton">@color/black</item>
        <item name="colorOnPayButtonIcon">@color/black</item>

        <item name="colorOrderCountItems">@color/kiwi</item>
        <item name="colorOrderSum">@color/crayola</item>

        <item name="colorButtonRemoveItem">@color/light_grey</item>
        <item name="colorOrderInfo">@color/light_grey</item>

        <item name="android:windowBackground">@color/chinese_black</item>

    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorActiveButton</item>
        <item name="android:textColor">?attr/colorOnActiveButton</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="OrderTotalTextStyle" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOrderSum</item>
    </style>

    <style name="OrderInfoTextStyle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOrderInfo</item>
    </style>

    <style name="OrderCountItemsTextStyle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOrderCountItems</item>
    </style>

    <style name="OrderItemsCaptionTextStyle" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOrderInfo</item>
    </style>

    <style name="PayButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPayButton</item>
        <item name="android:textColor">?attr/colorOnPayButton</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:drawableTint">?attr/colorOnPayButtonIcon</item>
        <item name="cornerRadius">30pt</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textScaleX">0.9</item>
        <item name="iconTint">?attr/colorOnPayButtonIcon</item>
    </style>

    <style name="SignTitleStyle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorSignInTitle</item>
    </style>
    <style name="SignRegisterStyle" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorSignInRegister</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="SignResetStyle" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorSignInReset</item>
    </style>
    <style name="SignSigninButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorSignInButton</item>
        <item name="android:textColor">?attr/colorOnSignInButton</item>
        <item name="android:minHeight">60dp</item>
        <item name="cornerRadius">1pt</item>
    </style>

</resources>