<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ViewResources" parent="Base.Theme.ViewResources">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="actionColor">@color/dialog_action_color</item>
        <item name="buttonTextColor">@color/dialog_button_text_color</item>
        <item name="hintTextColor">@color/dialog_hint_text_color</item>
        <item name="dialogOutlineColor">@color/dialog_outline_color</item>
        <item name="materialButtonStyle">@style/SquareButtonStyle</item>
        <item name="textInputStyle">@style/DialogTextInputStyle</item>
    </style>

    <style name="ThemeOverlay.Material3.Toolbar">
        <item name="iconColor">@color/top_bar_icon</item>
        <item name="android:textColorPrimary">@color/top_bar_text</item>
        <item name="android:background">@color/top_bar_background</item>
        <item name="colorControlNormal">?iconColor</item> <!--кнопка меню и tint у @drawable/search-->
        <item name="navigationIconTint">?iconColor</item> <!--кнопка <- -->
        <item name="android:titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="Theme.ViewResources.Contact" parent="Theme.ViewResources">
        <item name="actionColor">@color/contact_action_color</item>
        <item name="buttonTextColor">@color/contact_button_text_color</item>
        <item name="inputBackground">@color/contact_input_background</item>
        <item name="inputTextColor">@color/contact_input_text_color</item>
        <item name="iconColor">@color/contact_input_icon_color</item>
        <item name="hintTextColor">@color/contact_hint_text_color</item>
        <item name="materialButtonStyle">@style/SquareButtonStyle</item>
        <item name="textInputStyle">@style/ContactTextInputStyle</item>
    </style>

    <style name="Theme.ViewResources.Cart" parent="Theme.ViewResources">
        <item name="actionColor">@color/cart_action_color</item>
        <item name="iconColor">@color/cart_icon_color</item>
        <item name="buttonTextColor">@color/cart_button_text_color</item>
        <item name="materialButtonStyle">@style/CartButtonStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="separatorColor">@color/separator_color</item>
    </style>

</resources>