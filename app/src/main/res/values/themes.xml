<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ViewResources" parent="Theme.ThemeSwitcher.Light"/>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">?attr/colorActionBar</item>
        <item name="android:textColorPrimary">?attr/colorOnActionBarTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_left</item>
    </style>

       <!-- Light Theme -->
    <style name="Theme.ThemeSwitcher.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnActionBar">@color/white</item>
        <item name="colorActionBar">@color/light_primary</item>
        <item name="colorOnActionBarTitle">@color/white</item>

        <item name="colorActiveButton">@color/light_green</item>
        <item name="colorOnActiveButton">@color/white</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ThemeSwitcher.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnActionBar">@color/light_grey</item>
        <item name="colorOnActionBarTitle">@color/white</item>
        <item name="colorActionBar">@color/dark_grey</item>

        <item name="colorActiveButton">@color/light_blue</item>
        <item name="colorOnActiveButton">@color/black</item>
    </style>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorActiveButton</item>
        <item name="android:textColor">?attr/colorOnActiveButton</item>
        <item name="android:minHeight">60dp</item>
    </style>
</resources>