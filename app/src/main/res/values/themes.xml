<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="menuIconColor">@color/white</item>
        <item name="cartTitleColor">@color/black</item>
        <item name="cartTextColor">@color/black</item>
        <item name="crossIconColor">@color/red</item>
        <item name="dotLine">@color/black</item>
        <item name="totalOrderColor">@color/black</item>
        <item name="walletColor">@color/grey</item>
        <item name="alertTextColor">@color/black</item>
        <item name="registerTextColor">@color/blue</item>
        <item name="resetPasswordTextColor">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="registerButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/green</item>
    </style>
    <style name="payButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="signInButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>