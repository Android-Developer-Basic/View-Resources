<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ViewResources" parent="Theme.ThemeSwitcher.Light"/>

    <style name="ActionBarStyle" parent="Theme.MaterialComponents">
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.ThemeSwitcher.Light" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnActionBar">?attr/colorOnPrimary</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>

    </style>

    <!-- Dark Theme -->
    <style name="Theme.ThemeSwitcher.Dark" parent="Theme.MaterialComponents">
        <!-- Customize your dark theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnActionBar">@color/light_primary</item>
    </style>
</resources>