<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/toolbar_contacts</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--common-->
        <item name="layoutBackground">@color/layout_background</item>
        <item name="toolbarBackgroundContacts">@color/toolbar_contacts</item>
        <item name="toolbarBackgroundCart">@color/toolbar_cart</item>
        <item name="buttonTextColor">@color/button_text_color</item>
        <item name="toolbarItemsColor">@color/toolbar_items</item>
        <item name="toolbarTitleColor">@color/toolbar_title</item>
        <item name="iconTint">@color/toolbar_items</item>
        <item name="android:textColorSecondary">@color/toolbar_items</item>
        <item name="android:textColor">@color/common_text_color</item>

        <!--alert dialog-->
        <item name="signInButtonBackground">@color/sign_in_button</item>
        <item name="inputHintText">@color/common_text_color</item>
        <item name="registerTextColor">@color/register_text</item>
        <item name="resetTextColor">@color/reset_text</item>

        <!--contacts-->
        <item name="iconContactsColor">@color/icon_contacts_color</item>
        <item name="boxBackgroundColorContacts">@color/box_background_color_contacts</item>
        <item name="registerButtonBackground">@color/register_button_background</item>

        <!--cart-->
        <item name="mainTextCartColor">@color/main_text_cart_color</item>
        <item name="closeIconItemColor">@color/close_icon_item_color</item>
        <item name="payNowButtonBackground">@color/pay_now_button_background</item>
        <item name="payNowButtonIconTint">@color/pay_now_button_icon_tint</item>
        <item name="payNowButtonTextColor">@color/pay_now_button_text_color</item>
        <item name="totalItemsTextColor">@color/total_items_text_color</item>

        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
    </style>


</resources>