<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="AppBarBackground">@color/register</item>
        <item name="ActivityCartTotalItemsTextColor">@color/black</item>
        <item name="ActivityCartTotalSum">@color/black</item>
        <item name="ActivityDialogSignIn">@color/sign_in</item>
    </style>

    <style name="ActivityCartPayBtn" parent="@style/Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ActivityContactsRegisterBtn" parent="@style/Widget.Material3.Button.ElevatedButton" >
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivitySignInBtn" parent="@style/Widget.Material3.Button.ElevatedButton" >
        <item name="backgroundTint">@color/register</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="backgroundColor">@color/white</item>
    </style>
</resources>