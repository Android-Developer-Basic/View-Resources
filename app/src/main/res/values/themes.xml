<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_primary</item>
        <!-- Customize your theme here. -->
        <item name="appBackground">@color/light_background</item>
        <item name="colorControlNormal">@color/light_background</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="toolbarSize">56dp</item>
        <item name="toolbarBackground">@color/light_primary</item>
        <item name="iconBackgroundColor">@color/light_background</item>

    </style>
</resources>
