<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_title</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icon_color</item>
        <item name="colorSecondaryVariant">@color/background_menu</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--цвет нижней кнопки активити Contacts-->
        <item name="colorButtonNormal">@color/register_color</item>
        <!--цвет основного текста в приложении-->
        <item name="textFillColor">@color/text</item>
        <item name="textBackground">@color/white</item>
        <!--цвет текста верхней панели активити Cart-->
        <item name="colorTertiary">@color/white</item>
        <item name="backgroundStacked">@color/background_title</item>
        <!--цвет нижней кнопки активити cart-->
        <item name="colorError">@color/text</item>
        <!--цвет строки You order total-->
        <item name="colorSwitchThumbNormal">@color/text</item>
        <!--цвет иконки Close-->
        <item name="colorSurface">@color/close_color</item>
        <!--цвет иконок верхней панели активити Cart-->
        <item name="colorSurfaceVariant">@color/white</item>
        <!--цвет нижней кнопки Sign in-->
        <item name="colorSurfaceInverse">@color/background_title</item>
        <!--цвет надписи Reset в Sign in-->
        <item name="colorPrimarySurface">@color/background_title</item>
        <!--цвет рамки Outline Text в Sign in-->
        <item name="colorSecondaryContainer">@color/background_menu</item>
    </style>
</resources>