<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:radius">4dp</item>
    </style>

    <style name="RegisterButton" parent="Theme.ViewResources">
        <item name="backgroundTint">@android:color/holo_green_light</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PayButton" parent="Theme.ViewResources">
        <item name="backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:radius">999dp</item>
        <item name="iconTint">@android:color/darker_gray</item>
    </style>

    <style name="SignInButton" parent="Theme.ViewResources">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>