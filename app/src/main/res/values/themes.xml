<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_primary</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_medium</item>

        <item name="toolbarHeight">56dp</item>
        <item name="textInputHeight">54dp</item>
        <item name="marginTop">24dp</item>
        <item name="marginSide">16dp</item>
        <item name="marginBottom">16dp</item>

        <item name="appBackground">@color/light_background</item>
        <item name="colorControlNormal">@color/light_background</item>
        <item name="toolbarBackground">@color/light_primary</item>
        <item name="toolbarIconColor">@color/light_background</item>
        <item name="textBoxBackgroundColor">@color/light_shade</item>
        <item name="textInputIconColor">@color/light_icon</item>
        <item name="textColor">@color/light_main</item>
        <item name="buttonBackgroundColor">@color/light_secondary</item>
        <item name="buttonTextColor">@color/light_background</item>
        <item name="dialogButtonColor">@color/light_primary</item>
        <item name="resetButtonColor">@color/light_primary</item>
        <item name="itemsInCartColor">@color/light_main</item>
        <item name="cartToolBarColor">@color/light_primary</item>
        <item name="closeIconColor">@color/light_accent</item>
        <item name="totalTextColor">@color/light_main</item>
        <item name="walletIconColor">@color/light_icon</item>
        <item name="walletButtonColor">@color/light_main</item>
    </style>
</resources>
