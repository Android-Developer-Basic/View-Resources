<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryVariant">@color/app_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarTitleColor">@color/toolbar_title</item>
        <item name="toolbarIconsColor">@color/toolbar_icons</item>
        <item name="walletIcon">@color/pay_now_tint</item>
    </style>

    <style name="Theme.ViewResources.Cart">
        <item name="colorPrimary">@color/app_bar_color</item>
    </style>
</resources>