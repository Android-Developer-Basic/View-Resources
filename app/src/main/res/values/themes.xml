<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ViewResources" parent="Theme.ThemeSwitcher.Light"/>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_left</item>
    </style>

       <!-- Light Theme -->
    <style name="Theme.ThemeSwitcher.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorOnActionBar">?attr/colorOnPrimary</item>
        <item name="buttonStyle">@style/MainButtons</item>
        <item name="actionButtonStyle">@style/MainButtons</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.ThemeSwitcher.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorOnActionBar">@color/light_primary</item>
        <item name="buttonStyle">@style/MainButtons</item>
    </style>

    <style name="MainButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>