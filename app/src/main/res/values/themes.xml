<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2980B9</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bar_icons</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="textViewCart16sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cart_text</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="textViewCart12sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/cart_text</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="textCart20sp" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>