<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="H6">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Body1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Button">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:layout_height">?attr/toolbarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/toolbarBackground</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="navigationIconTint">?attr/iconBackgroundColor</item>
        <item name="titleTextColor">@color/light_background</item>
        <item name="titleTextAppearance">@style/H6</item>
    </style>

</resources>
