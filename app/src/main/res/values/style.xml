<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="cartImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="cartTextViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/cartTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="cartTextViewDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/cartTextColor</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="cartPrice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/cartTextColor</item>
        <item name="android:gravity">right|center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="cartPriceValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/cartTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="crossImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/close</item>
        <item name="android:gravity">right|center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <style name="totalOrder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/totalOrderColor</item>
    </style>
    <style name="totalOrderPosition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/cartTextColor</item>
    </style>
</resources>