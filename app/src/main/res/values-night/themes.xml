<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_medium</item>

        <item name="toolbarHeight">56dp</item>
        <item name="textInputHeight">54dp</item>
        <item name="marginTop">24dp</item>
        <item name="marginSide">16dp</item>
        <item name="marginBottom">16dp</item>

        <item name="appBackground">@color/dark_background</item>
        <item name="colorControlNormal">@color/dark_icon</item>
        <item name="toolbarBackground">@color/dark_shade</item>
        <item name="toolbarIconColor">@color/dark_icon</item>
        <item name="textBoxBackgroundColor">@color/dark_shade</item>
        <item name="textInputIconColor">@color/dark_icon</item>
        <item name="textColor">@color/dark_main</item>
        <item name="buttonBackgroundColor">@color/dark_primary</item>
        <item name="buttonTextColor">@color/dark_background</item>
        <item name="dialogButtonColor">@color/dark_primary</item>
        <item name="resetButtonColor">@color/dark_main</item>
        <item name="itemsInCartColor">@color/dark_secondary</item>
        <item name="cartToolBarColor">@color/dark_background</item>
        <item name="closeIconColor">@color/dark_icon</item>
        <item name="totalTextColor">@color/dark_tretiary</item>
        <item name="walletIconColor">@color/dark_background</item>
        <item name="walletButtonColor">@color/dark_secondary</item>
    </style>
</resources>
