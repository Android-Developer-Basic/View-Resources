<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundBlack</item>
        <item name="colorPrimaryVariant">@color/grayIconsDay</item>
        <item name="colorOnPrimary">@color/backgroundBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightGrayBckDay</item>
        <item name="colorSecondaryVariant">@color/greenButtonDay</item>
        <item name="colorOnSecondary">@color/GrayBckNight</item>


        <!-- Text colors. -->
        <item name="android:textColorHint">@color/grayTextNight</item>
        <item name="textMainCartActivity">@color/Green</item>
        <item name="mainText">@color/grayTextNight</item>
        <item name="totalText">@color/orangeText</item>
        <item name="textButtonRegister">@color/blueButtonNight</item>


        <!-- Top bar colors. -->
        <item name="tobBarNightCart">@color/gray_main</item>
        <item name="buttonBottomSignIn">@color/blueButtonNight</item>
        <item name="topBarIconTint">@color/grayIconsNight</item>
        <item name="navigationIconTint">@color/grayIconsNight</item>
        <item name="titleTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_main</item>
        <!-- Other -->
        <item name="textReset">@color/grayTextNight</item>

        <item name="CancelImage">@color/grayIconsNight</item>
        <item name="editTextBackground">@color/gray_main</item>
        <item name="ButtonPayDrawTint">@color/backgroundBlack</item>
        <item name="IconTint">@color/grayIconsNight</item>
        <item name="ButtonRegisterBackground">@color/blueButtonNight</item>
        <item name="ButtonPayBackground">@color/Green</item>
        <!-- Customize your theme here. -->
    </style>
</resources>