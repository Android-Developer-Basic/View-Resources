<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/dark_background_title</item>
        <item name="colorOnPrimary">@color/dark_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_icon_color</item>
        <item name="colorSecondaryVariant">@color/dark_background_title</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!--цвет нижней кнопки активити Contacts-->
        <item name="colorButtonNormal">@color/dark_register_color</item>
        <!--цвет основного текста в приложении-->
        <item name="textFillColor">@color/dark_text</item>
        <item name="textBackground">@color/dark_primary</item>
        <!--цвет текста верхней панели активити Cart-->
        <item name="colorTertiary">@color/dark_text</item>
        <item name="backgroundStacked">@color/dark_primary</item>
        <!--цвет нижней кнопки активити cart-->
        <item name="colorError">@color/dark_pay</item>
        <!--цвет строки You order total-->
        <item name="colorSwitchThumbNormal">@color/dark_order</item>
        <!--цвет иконки Close-->
        <item name="colorSurface">@color/dark_icon_color</item>
        <!--цвет иконок верхней панели активити Cart-->
        <item name="colorSurfaceVariant">@color/dark_icon_color</item>
        <!--цвет нижней кнопки Sign in-->
        <item name="colorSurfaceInverse">@color/dark_register_color</item>
        <!--цвет надписи Reset в Sign in-->
        <item name="colorPrimarySurface">@color/dark_text</item>
        <!--цвет рамки Outline Text в Sign in-->
        <item name="colorSecondaryContainer">@color/dark_icon_color</item>
    </style>
</resources>